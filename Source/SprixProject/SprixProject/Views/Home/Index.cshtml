@model IEnumerable<SprixProject.Models.Algorithm>

@{
    ViewBag.Title = "Main Page";
    Layout = "~/Views/Shared/_EntryLayout.cshtml"; // specifying which layout it is showing
}


<div id="col-lg-12" style="text-align: center;">
    <p><span style="font-size: 90px; font-family:'Orator Std'; ">AlgoAnimator</span></p>
</div>

<div class="col-lg-12" style="height:280px;">
    <div class="frame">
        <div class="hex-outer h1"></div>
        <div class="hex-outer h2"></div>
        <div class="hex-outer h3"></div>
        <div class="hex-inner h1"></div>
        <div class="hex-inner h2"></div>
        <div class="hex-inner h3"></div>
        <div class="label">@Html.ActionLink("+", "AlgorithmDetails", "Algorithm", new { Id = 1 }, null)</div>
    </div>

    <div class="frame2">
        <div class="hex-outer h1"></div>
        <div class="hex-outer h2"></div>
        <div class="hex-outer h3"></div>
        <div class="hex-inner h1"></div>
        <div class="hex-inner h2"></div>
        <div class="hex-inner h3"></div>
        <div class="label">@Html.ActionLink("+", "AlgorithmDetails", "Algorithm", new { Id = 6 }, null)</div>
    </div>

    <div class="frame3">
        <div class="hex-outer h1"></div>
        <div class="hex-outer h2"></div>
        <div class="hex-outer h3"></div>
        <div class="hex-inner h1"></div>
        <div class="hex-inner h2"></div>
        <div class="hex-inner h3"></div>
        <div class="label">@Html.ActionLink("+", "AlgorithmDetails", "Algorithm", new { Id = 2 }, null)</div>
    </div>
</div>
    <!-- Text under buttons -->
    <div class="col-lg-12">
        <div class="textGreedy">@Html.ActionLink("Greedy Method", "AlgorithmDetails", "Algorithm", new { Id = 1 }, null)</div>
        <div class="textDivideAndConquer">@Html.ActionLink("Divide and Conquer", "AlgorithmDetails", "Algorithm", new { Id = 6 }, null)</div>
        <div class="textDynamic">@Html.ActionLink("Dynamic Programming", "AlgorithmDetails", "Algorithm", new { Id = 2 }, null)</div>
    </div>
<div class="col-lg-12">
    <p>@Html.ActionLink("Sort type algorithms", "AlgorithmDetails", "Algorithm", new { Id = 7 }, null)</p>
</div>
    

