<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AlgoAnimator</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/simple-sidebar.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <!-- Top navigational bar here -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AlgoAnimator", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div id="wrapper">

        <!-- Sidebar -->
        <!-- TODO; Make this dynamic, side bar depends on the type of page -->

        @RenderPage("~/Views/Animation/GreedyMethod/_GreedyNavBar.cshtml")

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-lg-12">@RenderSection("Title", false)</div>

                    <div class="col-lg-12" style="background-color:lightgray">
                        @RenderSection("ContentTitle", false)

                        <div class="col-lg-12" style="background-color:yellow">
                            @RenderSection("Content", false)
                        </div>

                        <div class="col-lg-12"><p><a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a></p></div> <!-- TODO; change button type -->
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

</body>
</html>
