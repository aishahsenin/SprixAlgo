@*sort type form*@
@if (Model.algoDetails.FormType == 1)
{
    <div class="col-md-12">
            <section id="sortForm">
                @using (Html.BeginForm("AlgorithmDetails", "Algorithm", FormMethod.Post, new { id = "sortForm" }))
                    {
                    <h4>Enter the values for the @Model.algoDetails.AlgorithmName</h4>
                            <hr />
                            <div class="form-group">
                                <div class=".col-xs-6 control-label">Index no. 1 value</div>
                                <div class=".col-xs-6">
                                    <input type="text" name="indexValue_1" id="indexValue_1" class="form-control">
                                </div>
                            </div>
                            <div id="here">
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-6 col-md-10">
                                    <input type="button" id="sortButtonAdd" value="Add" class="btn" onClick="AddOneMoreTextBox(this.id)" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-6 col-md-10">
                                    <input type="button" class="btn btn-primary" value="Submit" onClick="submitThis(this)" />
                                </div>
                            </div>
                }
            </section>

        </div>

}
