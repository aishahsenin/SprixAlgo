@model SprixProject.ViewModel.AlgorithmViewModel

@if (Model.formType == 1)
{

    <div class="col-md-8">

        <section id="loginForm">
            @using (Html.BeginForm("TestAjaxRedirect", "Algorithm", FormMethod.Post, null))
                {
                <h4>Text</h4>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(m => m.form.NoOfIndex, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.form.NoOfIndex, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <p>@Html.ActionLink("Submit", "TestAjaxRedirect")</p>
                    </div>
            }
        </section>

    </div>

