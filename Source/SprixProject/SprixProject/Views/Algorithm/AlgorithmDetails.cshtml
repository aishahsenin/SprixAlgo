@*@model SprixProject.Models.AlgoParadigmType*@
@*@model IEnumerable<SprixProject.Models.Algorithm>*@
@model SprixProject.ViewModel.AlgorithmViewModel

@{
    ViewBag.Title = "AlgorithmDetails";
}

@section Title{<h2>@Html.Encode(Model.algoDetails.ParadigmType)</h2>}

@section ContentTitle {<h2>@Html.Encode(Model.algoDetails.AlgorithmName)</h2>}

@section Content { <p>@Html.Encode(Model.algoDetails.AlgorithmDescription)</p> }

@section SideNavBar {

    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                @Html.Encode(Model.algoDetails.ParadigmType)
            </li>
            @foreach (var item in Model.algoNavBar)
            {
                <li>
                    <a href="#">
                        @Html.ActionLink(item.Name, "AlgorithmDetails", new { id = item.Id })
                    </a>
                </li>
            }
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->

}

